{
  "openapi": "3.0.1",
  "info": {
    "title": "API V2",
    "version": "v2"
  },
  "paths": {
    "/passport_credentials": {
      "get": {
        "summary": "Gets the credentials of a passport",
        "tags": [
          "Passport Credentials"
        ],
        "parameters": [
          {
            "name": "passport_id",
            "in": "query",
            "required": false,
            "description": "Passport id",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-API-KEY",
            "in": "header",
            "description": "Your Talent Protocol API key",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "AUTHORIZATION",
            "in": "header",
            "description": "Your auth token",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "get credentials",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "passport_credentials": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "earned_at": {
                            "type": "string",
                            "nullable": true,
                            "description": "The timestamp of when the passport credential was earned"
                          },
                          "id": {
                            "type": "string",
                            "nullable": false,
                            "description": "The id of the passport credential"
                          },
                          "category": {
                            "type": "string",
                            "nullable": false,
                            "enum": [
                              "Activity",
                              "Identity",
                              "Skills"
                            ],
                            "description": "The category of the credential"
                          },
                          "last_calculated_at": {
                            "type": "string",
                            "format": "date-time",
                            "nullable": true,
                            "description": "The last time the passport credential was calculated"
                          },
                          "max_score": {
                            "type": "integer",
                            "nullable": false,
                            "description": "The max score of the passport credential"
                          },
                          "name": {
                            "type": "string",
                            "nullable": false,
                            "description": "The name of the passport credential"
                          },
                          "score": {
                            "type": "number",
                            "nullable": false,
                            "description": "The score of the passport credential"
                          },
                          "type": {
                            "type": "string",
                            "nullable": false,
                            "enum": [
                              "active_wallet",
                              "base_buildathon",
                              "base_builder",
                              "base_builds",
                              "base_camp",
                              "base_learn",
                              "basename",
                              "bonsai",
                              "build",
                              "celo_builder",
                              "coinbase_verified_id",
                              "crypto_nomads",
                              "cyber_id",
                              "degen",
                              "ens",
                              "eth_global",
                              "farcaster",
                              "fractal_id",
                              "gitcoin",
                              "github",
                              "jam_creator_club",
                              "lens",
                              "linkedin",
                              "optimism_builder",
                              "phaver",
                              "pooly_supporter",
                              "retro_pgf",
                              "safe_wallet",
                              "social_capital_rank",
                              "talent_passport",
                              "take_off",
                              "worldcoin",
                              "taikai",
                              "the_arena",
                              "yellow_collective"
                            ],
                            "description": "The type of the passport credential"
                          },
                          "value": {
                            "type": "string",
                            "nullable": true,
                            "description": "The value of the passport credential"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "unauthorized request"
          }
        }
      }
    },
    "/passport_profiles/{passport_id}": {
      "patch": {
        "summary": "Updates the profile of a passport",
        "tags": [
          "Passport Profiles"
        ],
        "parameters": [
          {
            "name": "passport_id",
            "in": "path",
            "description": "Passport id",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-API-KEY",
            "in": "header",
            "description": "Your Talent Protocol API key",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "AUTHORIZATION",
            "in": "header",
            "description": "Your auth token",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "profile updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "passport_profile": {
                      "type": "object",
                      "properties": {
                        "bio": {
                          "type": "string",
                          "nullable": true,
                          "description": "The bio of the passport"
                        },
                        "display_name": {
                          "type": "string",
                          "nullable": true,
                          "description": "The display name of the passport"
                        },
                        "location": {
                          "type": "string",
                          "nullable": true,
                          "description": "The location of the passport"
                        },
                        "tags": {
                          "type": "array",
                          "items": {
                            "type": "string",
                            "description": "A tag describing the passport profile"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "unauthorized request"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "passport_profile": {
                    "type": "object",
                    "properties": {
                      "display_name": {
                        "type": "string",
                        "description": "The display name of the passport"
                      },
                      "bio": {
                        "type": "string",
                        "description": "The bio of the passport"
                      },
                      "tags": {
                        "type": "string",
                        "description": "The tags of the passport"
                      },
                      "location": {
                        "type": "string",
                        "format": "datetime",
                        "description": "The location of the passport"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/passports": {
      "get": {
        "summary": "Get a list of passports sorted by score",
        "tags": [
          "Passports"
        ],
        "parameters": [
          {
            "name": "keyword",
            "in": "query",
            "required": false,
            "description": "Keyword to filter passports by name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-API-KEY",
            "in": "header",
            "description": "Your Talent Protocol API key",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "passports",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "passports": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "activity_score": {
                            "type": "number",
                            "nullable": false,
                            "description": "The score activity credentials contribute to the passport score"
                          },
                          "identity_score": {
                            "type": "number",
                            "nullable": false,
                            "description": "The score identity credentials contribute to the passport score"
                          },
                          "skills_score": {
                            "type": "number",
                            "nullable": false,
                            "description": "The score skills credentials contribute to the passport score"
                          },
                          "calculating_score": {
                            "type": "boolean",
                            "nullable": false,
                            "description": "Flag indicating if the passport is calculating"
                          },
                          "connections_count": {
                            "type": "integer",
                            "nullable": false,
                            "description": "The number of connections of the passport"
                          },
                          "human_checkmark": {
                            "type": "boolean",
                            "nullable": false,
                            "description": "Flag indication if the passport has a human checkmark"
                          },
                          "last_calculated_at": {
                            "type": "string",
                            "format": "date-time",
                            "nullable": true,
                            "description": "The last time the passport score was calculated"
                          },
                          "main_wallet": {
                            "type": "string",
                            "nullable": true,
                            "description": "The main wallet of the passport"
                          },
                          "passport_id": {
                            "type": "integer",
                            "nullable": true,
                            "description": "The id of the passport"
                          },
                          "score": {
                            "type": "number",
                            "nullable": true,
                            "description": "The score of the passport"
                          },
                          "passport_profile": {
                            "type": "object",
                            "nullable": false,
                            "properties": {
                              "bio": {
                                "type": "string",
                                "nullable": true,
                                "description": "The bio of the passport"
                              },
                              "display_name": {
                                "type": "string",
                                "nullable": true,
                                "description": "The display name of the passport"
                              },
                              "location": {
                                "type": "string",
                                "nullable": true,
                                "description": "The location of the passport"
                              },
                              "tags": {
                                "type": "array",
                                "items": {
                                  "type": "string",
                                  "description": "A tag describing the passport profile"
                                }
                              }
                            }
                          },
                          "verified_wallets": {
                            "type": "array",
                            "items": {
                              "type": "string",
                              "description": "The connected wallets of the passport"
                            }
                          }
                        }
                      }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "current_page": {
                          "type": "integer",
                          "description": "The current page of the fetched records"
                        },
                        "last_page": {
                          "type": "integer",
                          "description": "The last page of records"
                        },
                        "total": {
                          "type": "integer",
                          "description": "The total amount of records"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "unauthorized request"
          }
        }
      }
    },
    "/passports/{id}": {
      "get": {
        "summary": "Get a passport using wallet or passport id",
        "tags": [
          "Passports"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Passport id or wallet address",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "X-API-KEY",
            "in": "header",
            "description": "Your Talent Protocol API key",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "passport",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "passport": {
                      "type": "object",
                      "properties": {
                        "activity_score": {
                          "type": "number",
                          "nullable": false,
                          "description": "The score activity credentials contribute to the passport score"
                        },
                        "identity_score": {
                          "type": "number",
                          "nullable": false,
                          "description": "The score identity credentials contribute to the passport score"
                        },
                        "skills_score": {
                          "type": "number",
                          "nullable": false,
                          "description": "The score skills credentials contribute to the passport score"
                        },
                        "calculating_score": {
                          "type": "boolean",
                          "nullable": false,
                          "description": "Flag indicating if the passport is calculating"
                        },
                        "connections_count": {
                          "type": "integer",
                          "nullable": false,
                          "description": "The number of connections of the passport"
                        },
                        "human_checkmark": {
                          "type": "boolean",
                          "nullable": false,
                          "description": "Flag indication if the passport has a human checkmark"
                        },
                        "last_calculated_at": {
                          "type": "string",
                          "format": "date-time",
                          "nullable": true,
                          "description": "The last time the passport score was calculated"
                        },
                        "main_wallet": {
                          "type": "string",
                          "nullable": true,
                          "description": "The main wallet of the passport"
                        },
                        "passport_id": {
                          "type": "integer",
                          "nullable": true,
                          "description": "The id of the passport"
                        },
                        "score": {
                          "type": "number",
                          "nullable": true,
                          "description": "The score of the passport"
                        },
                        "passport_profile": {
                          "type": "object",
                          "nullable": false,
                          "properties": {
                            "bio": {
                              "type": "string",
                              "nullable": true,
                              "description": "The bio of the passport"
                            },
                            "display_name": {
                              "type": "string",
                              "nullable": true,
                              "description": "The display name of the passport"
                            },
                            "location": {
                              "type": "string",
                              "nullable": true,
                              "description": "The location of the passport"
                            },
                            "tags": {
                              "type": "array",
                              "items": {
                                "type": "string",
                                "description": "A tag describing the passport profile"
                              }
                            }
                          }
                        },
                        "verified_wallets": {
                          "type": "array",
                          "items": {
                            "type": "string",
                            "description": "The connected wallets of the passport"
                          }
                        },
                        "merged": {
                          "type": "boolean",
                          "nullable": false,
                          "description": "Flag indicating if the passport was merged"
                        },
                        "passport_socials": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "follower_count": {
                                "type": "string",
                                "nullable": true,
                                "description": "The count of followers of the passport social"
                              },
                              "following_count": {
                                "type": "string",
                                "nullable": true,
                                "description": "The count of following of the passport social"
                              },
                              "location": {
                                "type": "string",
                                "nullable": true,
                                "description": "The location of the passport social"
                              },
                              "profile_bio": {
                                "type": "string",
                                "nullable": true,
                                "description": "The bio of the passport social"
                              },
                              "profile_display_name": {
                                "type": "string",
                                "nullable": true,
                                "description": "The display name of the passport social"
                              },
                              "profile_image_url": {
                                "type": "string",
                                "nullable": true,
                                "description": "The profile image url of the passport social"
                              },
                              "profile_name": {
                                "type": "string",
                                "nullable": true,
                                "description": "The name of the passport social"
                              },
                              "profile_url": {
                                "type": "string",
                                "nullable": true,
                                "description": "The url of the passport social"
                              },
                              "source": {
                                "type": "string",
                                "enum": [
                                  "lens",
                                  "basename",
                                  "farcaster",
                                  "github",
                                  "linkedin",
                                  "talent_protocol",
                                  "builderfi"
                                ],
                                "description": "The source of the passport social"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "unauthorized request"
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "https://{defaultHost}/api/v2",
      "variables": {
        "defaultHost": {
          "default": "api.talentprotocol.com"
        }
      }
    }
  ]
}